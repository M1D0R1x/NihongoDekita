{
  "builds": [
    {
      "src": "NihongoDekita/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.13" }
    },
    {
      "src": "collectstatic.sh",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "NihongoDekita/wsgi.py"
    }
  ]
}
